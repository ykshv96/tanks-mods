{
  // =============================================
  // ОСНОВНЫЕ НАСТРОЙКИ МАРКЕРОВ (для новичков)
  // =============================================
  // Все параметры можно менять без перезапуска игры (если включен autoReloadConfig)
  // Числовые значения (x, y, size и др.) можно свободно изменять
  // Цвета задаются в формате 0xRRGGBB (например: 0xFF0000 - красный)

  "def": {
    // 1. Всплывающий урон при попадании
    "damageText": {
      "enabled": true,          // true - показывать урон, false - скрыть
      "x": 0,                   // Горизонтальное положение (0 = центр)
      "y": -67,                 // Вертикальное положение (отрицательное = выше танка)
      "alpha": 100,             // Прозрачность (100 = полностью видно)
      "textFormat": {           // Настройки текста:
        "font": "$FieldFont",   // Шрифт (лучше не менять)
        "size": 18,             // Размер текста (рекомендуется 12-20)
        "color": null,          // Цвет (null = автоматический)
        "bold": false           // Жирный шрифт (true/false)
      },
      "speed": 2                // Скорость всплывания (1-5)
    },

    // 2. Название танка (можно увеличить размер)
    "tankName": {
      "enabled": true,
      "x": 0,                   // Позиция по X
      "y": -36,                 // Позиция по Y (регулируйте если накладывается на другие элементы)
      "textFormat": {
        "size": 18,             // Размер названия (стандартно 18)
        "color": "0xFFFFFF",    // Цвет (белый)
        "bold": true            // Жирный шрифт
      }
    },

    // 3. Имя игрока (никнейм)
    "playerName": {
      "enabled": true,
      "size": 13,               // Размер ника (рекомендуется 12-15)
      "color": null,            // Автоцвет по рангу
      "bold": false             // Обычный шрифт
    },

    // 4. Уровень здоровья
    "tankHp": {
      "enabled": true,
      "size": 11,               // Размер цифр
      "color": "0xD9D9D9",      // Светло-серый цвет
      "bold": true              // Жирные цифры
    }
  },

  // =============================================
  // НАСТРОЙКИ ДЛЯ СОЮЗНИКОВ (ally) 
  // =============================================
  "ally": {
    // Иконка типа техники (ТТ/СТ/ЛТ/ПТ/Арта)
    "vehicleIcon": {
      "enabled": true,          // Показывать иконку
      "x": 0, "y": -16,         // Положение (можно сдвигать)
      "alpha": 100              // Прозрачность
    },

    // Полоса здоровья
    "healthBar": {
      "enabled": true,
      "width": 70,              // Ширина полосы
      "height": 12,             // Высота полосы
      "color": null,            // Автоцвет
      "damage": {
        "color": "{{c:dmg}}",   // Цвет при получении урона
        "fade": 1               // Время анимации
      }
    },

    // Уровень танка (римские цифры)
    "levelIcon": {
      "enabled": false,         // true - включить уровни
      "x": 0, "y": -21          // Позиция
    },

    // Альтернативный вариант отображения уровня (если levelIcon не работает)
    "textFields": [
      {
        "enabled": true,        // Включить текстовый уровень
        "x": 0, "y": -21,
        "textFormat": {
          "size": 12,
          "color": "0xFFFFFF"   // Белый цвет
        },
        "format": "{{rlevel}}"  // Римские цифры
      }
    ]
  },

  // =============================================
  // НАСТРОЙКИ ДЛЯ ПРОТИВНИКОВ (enemy) 
  // =============================================
  // Повторяет структуру ally, но можно задать другие параметры
  "enemy": {
    "vehicleIcon": { "enabled": true },
    "healthBar": { "enabled": true },
    "levelIcon": { "enabled": false },
    "textFields": [
      // Аналогично ally
    ]
  }
}